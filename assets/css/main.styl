//Fontes
@import url('https://fonts.googleapis.com/css?family=Megrim')
//Variaveis telas
$desk= 48em
//variaveis fontes
$destaque= 'Megrim', cursive
//Banner
.banner
    background-image url(../img/banner.jpg)
    background-size 100%
    background-repeat no-repeat
    width 100%
    .container
        padding 2em 0
        img 
            width 50%
@media(min-width: $desk)
    .banner
        background-attachment fixed
        background-size cover
        min-height 100vh
        .container
            padding 7em 0
            img 
                width 70%
//Buttons
.bt
    border-style solid
    border-width 0.02em
    color #fff
    padding 0.5em 2em
    position relative
    top 1em
    left 1em
    &.bt-envio
        background-color #ff5252
        border-color #ff5252
//Sections    
section 
   .container
       padding 1em 0.2em
   .fix 
       display none
   .top
       display block
   h2 
       color #ff5252
       font-family $destaque
       font-size 4em
       font-weight bold
   p        
       font-size 1.2em
@media(min-width: $desk)
    .um
        background-attachment fixed
        background-image url(../img/dj.png)
        background-position left
        background-size 50%
        background-repeat no-repeat
    .dois
        background-attachment fixed
        background-color #eee3
        background-image url(../img/dj-2.png)
        background-position right
        background-size 50%
        background-repeat no-repeat         
    section 
        .container
            padding 4em 1em
            position relative
        .fix 
            display block
        .top 
            display none
        h2 
            font-size 14em
            position absolute
            top 0.4em
            transform rotate(90deg)
        .tres
            left -0.5em
            top 1em
        p
            font-size 1.8em
    .um
        h2                
            left 0.5em            
    .dois
        h2 
            right -0.03em
            top 1em
//Nav
.nav
    padding 4em 0
    position fixed
    width 100%
    z-index 1
    .links
        display none
        float right
        min-width 200px
        max-width 300px
        position relative
        &>a
            color #fff
            display block
            padding 0.8em
//Icone menu
.icon
    box-shadow 0 0.125em 0.3125em rgba(0,0,0,0.2)
    position absolute
    top 34%
    right -28px
    transform translate(-50%, -50%)
    width 5em
    height 5em
    cursor pointer
    background-color #000
    .hamburger
        width 3.125em
        height 0.375em
        background #fff
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        box-shadow 0 0.125em 0.3125em rgba(0,0,0,0.2)
        transition 0.5s
        &:after
            position absolute
            top 1em
            background #fff
            box-shadow 0 0.125em 0.3125em rgba(0,0,0,0.2)
            content ''
            height 0.375em
            width 3.125em
            transition 0.5s
        &:before
            position absolute
            top -1em
            background #fff
            box-shadow 0 0.125em 0.3125em rgba(0,0,0,0.2)
            content ''
            height 0.375em
            width 3.125em
            transition 0.5s
    &.active
        .hamburger
            background rgba(0,0,0,0)
            box-shadow 0 0.125em 0.3125em rgba(0,0,0,0.2)
            &:after
                transform rotate(135deg)
                top 0
            &:before
                transform rotate(45deg)
                top 0
//Play
.play_container    
  margin 4em auto
  padding 1em
  .musicas
    &>li
      list-style-type none
      padding 1em
      a
        color #3f4c6b
        font-family sans-serif  
        padding 1em
        position relative
        text-decoration none
        &:hover
          border-bottom 0.02em solid #fff
          transition 0.5s linear border
        &:after
           border 10px solid transparent
           border-left-color #3f4c6b
           content ""
           left -0.01em
           position absolute
           
  .music   
    background-color #3f4c6b!important
    width 100%
@media(min-width: 48em)
  .play_container
    width 100%
//Forms
.form-control
    padding 1.1rem .75rem!important
//footer
footer
    background-color #333
    h4
        color #fff
        text-align center
        a
            color #fff
            &:hover
                color crimson
                transition linear 1s color
    .container 
        padding 4em 0
        